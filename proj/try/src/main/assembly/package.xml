<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>package</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>src/main/resources/Sample.txt</source>
            <outputDirectory>some_txt_file/</outputDirectory>
            <destName>Sample-${project.version}.txt</destName>
        </file>
        <file>
            <source>src/main/resources/old/Sample_old.txt</source>
            <outputDirectory>some_txt_file/</outputDirectory>
            <destName>Sample_old-${project.version}.txt</destName>
        </file>
    </files>
</assembly>
